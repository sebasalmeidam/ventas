<div class="container">
  <h1>Nuevo</h1>
  <div class="row">
    <div class="col-12">
      <%= link_to 'Regresar', category_path(params[:category_id]), class: 'btn btn-default btn-sm ml-0' %>
    </div>
  </div>

  <section>
    <div class="row">
      <div class="col-12 col-lg-4">
        <%= form_with model: [@category, @product], local: true do |f| %>
          <%= render partial: 'products/products_form', locals: {f: f} %>
        <% end %>
      </div>
    </div>
  </section>
</div>