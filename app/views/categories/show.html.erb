<div class="container">
  <h1>
    <%= @category.nombre %>
    <%= link_to 'Regresar', categories_path, class: 'btn btn-outline-primary btn-rounded waves-effect btn-sm' %>  
  </h1>
  <div class="row">
    <div class="col-12">
      <%= @category.descripcion %>
    </div>
  </div>

  <section class="mt-4">
    <h2>Productos</h2>

    <div class="row">
      <div class="col-12">
        <%= link_to 'Agregar Producto', new_category_product_path(@category), class: 'btn btn-default btn-sm ml-0' %>
      </div>
    </div>
    <div class="row mt-4">
      <div class="col-12 table-responsive">
        <table class="table table-sm table-hover table-striped">
          <thead class="blue white-text">
            <tr>
              <th>Código</th>
              <th>Nombre</th>
              <th>Descripcion</th>
              <th>Imagen</th>
              <th>Precio</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @products.each do |product| %>
              <tr>
                <td><%= link_to product.codigo, category_product_path(@category, product), class: 'blue-text' %></td>
                <td><%= link_to product.nombre, category_product_path(@category, product), class: 'blue-text' %></td>
                <td><%= product.descripcion %></td>
                <td>Imagen</td>
                <td><%= product.precio %></td>
                <td class="">
                  <%= link_to 'Editar', edit_category_product_path(@category, product), class: 'btn btn-sm btn-info' %>
                  <%= link_to 'Eliminar', category_product_path(@category, product), method: :delete, class: 'btn btn-sm btn-danger', data: {confirm: "Estás por eliminar este registro, continuar?"}  %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </section>
</div>