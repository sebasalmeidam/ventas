<div class="container">
  <section>
    <div class="row">
      <div class="col-12">
        <h1>Editar Perfil</h1>    
      </div>
    </div>
  </section>
  
  <section>
    <div class="row">
      <div class="col-12 col-lg-4">
        <%= form_with model: @user, local: true do |f| %>
        <div class="md-form">
          <%= f.text_field :nombres, class: 'form-control'  %>
          <%= f.label :nombres %>
        </div>

        <div class="md-form">
          <%= f.text_field :marca, class: 'form-control'  %>
          <%= f.label 'Marca URL:' %>
        </div>

        <div class="md-form">
          <div class="file-field">
            <div class="btn btn-primary btn-sm float-left">
              <span>Escoger foto perfil</span>
              <%= f.file_field :foto_perfil %>
            </div>
            <div class="file-path-wrapper">
              <input class="file-path validate" type="text" placeholder="Escoger imagen">
            </div>
          </div>
        </div>
        <div class="md-form">
          <div class="file-field">
            <div class="btn btn-indigo btn-sm float-left">
              <span>Escoger logo</span>
              <%= f.file_field :logo %>
            </div>
            <div class="file-path-wrapper">
              <input class="file-path validate" type="text" placeholder="Escoger imagen">
            </div>
          </div>
        </div>
        <div class="md-form">
          <div class="row">
            <div class="col-12">
              <span class="waves-input-wrapper waves-effect waves-light" style=" display: block; ">
                <%= f.submit 'Enviar', class: 'btn btn-block btn-default btn-sm' %>
              </span >
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </section>
</div>

